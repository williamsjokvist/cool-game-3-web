---
import "../style/style.css";
import "../style/fonts.css";
import { Picture } from "@astrojs/image/components";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div
      id="notice"
      class="fixed z-50 text-[#ff2] text-[15px] pt-1 pb-2 w-full bg-[rgba(0,0,0,.5)] h-[27px] top-0 left-0 overflow-hidden"
    >
      <p class="whitespace-nowrap">Welcome to Cool Game 3.</p>
    </div>
    <header class="relative max-h-[400px] top-[-50px]">
      <a href="/" aria-label="Go home">
        <Picture
          class="mx-auto logo"
          src="/logo.png"
          widths={[200, 400, 800]}
          aspectRatio="16:9"
          sizes="(max-width: 800px) 100vw, 800px"
          alt="Cool Game 3 Logotype"
        />
      </a>
    </header>
    <slot />
  </body>
</html>
